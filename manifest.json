{
    "manifest_version": 2,
    "author": "NullDev",
    "name": "Snippeter",
    "description": "Export StackOverflow.com snippets to JSFiddle.net",
    "version": "1.0",
    "short_name": "Snippeter",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Snippeter"
    },
    "icons": {
        "128": "icon-big.png",
        "16":  "icon-big.png",
        "48":  "icon-big.png"
    },
    "content_scripts": [
        {
            "js": [ 
                "lib/jquery-3.2.1.min.js", 
                "content-SO.js" 
            ],
            "css" : ["custom.css"],
            "matches": ["*://stackoverflow.com/*"]
        },
        {
            "js": [
                "lib/jquery-3.2.1.min.js", 
                "content-JF.js" 
            ],
            "matches": ["*://jsfiddle.net/*"]
        }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    "permissions": [
        "*://stackoverflow.com/*",
        "*://jsfiddle.net/*",
        "tabs",
        "storage"
    ]
}
